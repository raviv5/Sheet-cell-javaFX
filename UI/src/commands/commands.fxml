                  <Label alignment="CENTER" prefHeight="17.0" prefWidth="325.0" text="General Operations" wrapText="true" />
               </children>
            </GridPane>
         </children>
      </AnchorPane>
   </content>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
